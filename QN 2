#include <stdio.h>

int main() {
    int n, i, number;

    
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int numbers[n]; 

    
    printf("Enter %d numbers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &numbers[i]);
    }

   
    printf("Odd and Even Classification:\n");
    for (i = 0; i < n; i++) {
        number = numbers[i];
        if (number % 2 == 0) {
            printf("%d is Even\n", number);
        } else {
            printf("%d is Odd\n", number);
        }
    }

    return 0;
}
